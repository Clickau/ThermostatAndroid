<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <NumberPicker
            android:id="@+id/dialog_temperature_picker_primary_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/dialog_temperature_picker_separator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text=","
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline3"
            android:layout_toEndOf="@+id/dialog_temperature_picker_primary_picker"/>

        <NumberPicker
            android:id="@+id/dialog_temperature_picker_secondary_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/dialog_temperature_picker_separator"/>
</RelativeLayout>
</RelativeLayout>